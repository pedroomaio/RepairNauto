@model AutoRepair.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "RecoverPassword";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/Account/fonts/material-icon/css/material-design-iconic-font.min.css">

<!-- Main css -->
<link rel="stylesheet" href="~/Account/css/style.css">
<script src="~/Account/vendor/jquery/jquery.min.js"></script>
<script src="https://cdn.lordicon.com/libs/mssddfmo/lord-icon-2.1.0.js"></script>


<div class="container" style=" margin-top: 2%;">
    <a class="nav-link text-dark font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">
        <lord-icon src="https://cdn.lordicon.com/gmzxduhd.json"
                   trigger="loop-on-hover"
                   colors="primary:#121331,secondary:#000000"
                   style="width: 50px; height: 50px;">
        </lord-icon>
    </a>
    <h2 class="form-title">RecoverPassword</h2>

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="Email" for="email"><i class="zmdi zmdi-email"></i></label>
                    <input asp-for="Email" type="email" id="email" placeholder="Your Email" />
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>

                <div class="form-group row">
                    <div class="col"> <a asp-action="Login" class="btn btn-success" >Back</a></div>
                    <div class="col">
                        <input type="submit" value="Recover password" class="btn btn-primary" />
                    </div>
                </div>
            </form>
            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>
        </div>
    </div>
</div>